---
import { getCollection } from 'astro:content'
import BaseHead from '../../components/BaseHead.astro'
import Footer from '../../components/Footer.astro'
import Header from '../../components/Header.astro'
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts'

const books = (await getCollection('book')).filter((p) =>
  import.meta.env.PROD ? p.data.draft !== true : true
)
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 960px;
      }

      /* Layout */
      .page-container {
        display: flex;
        min-height: 100vh;
      }

      /* Sidebar */
      .sidebar {
        width: 250px;
        background-color: #2c3e50;
        color: #ecf0f1;
        transition: all 0.3s ease;
        overflow-y: auto;
        position: fixed;
        height: 100vh;
        left: 0;
        top: 0;
        z-index: 1000;
      }

      .sidebar.collapsed {
        transform: translateX(-250px);
      }

      .sidebar-header {
        padding: 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 1px solid #34495e;
      }

      .sidebar-logo {
        font-size: 1.5rem;
        font-weight: bold;
      }

      .sidebar-content {
        padding: 20px 0;
      }

      .sidebar-menu {
        list-style: none;
      }

      .sidebar-menu-item {
        padding: 10px 20px;
        transition: background-color 0.2s;
        cursor: pointer;
      }

      .sidebar-menu-item:hover {
        background-color: #34495e;
      }

      .sidebar-menu-item.active {
        background-color: #3498db;
      }

      .sidebar-menu-link {
        color: #ecf0f1;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .sidebar-menu-icon {
        width: 20px;
        height: 20px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
      }

      /* Submenu */
      .sidebar-submenu {
        list-style: none;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease;
      }

      .sidebar-submenu.open {
        max-height: 500px;
      }

      .sidebar-submenu-item {
        padding: 8px 20px 8px 50px;
      }

      .sidebar-submenu-item:hover {
        background-color: #34495e;
      }

      .sidebar-submenu-link {
        color: #bdc3c7;
        text-decoration: none;
        display: block;
      }

      /* Content */
      .content {
        flex: 1;
        padding: 20px;
        margin-left: 250px;
        transition: margin-left 0.3s ease;
      }

      .content.expanded {
        margin-left: 0;
      }

      /* Toggle Button */
      .sidebar-toggle {
        background-color: #2c3e50;
        color: #ecf0f1;
        border: none;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 1001;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        display: none;
      }

      /* Responsiveness */
      @media (max-width: 768px) {
        .sidebar {
          transform: translateX(-250px);
        }

        .sidebar.active {
          transform: translateX(0);
        }

        .content {
          margin-left: 0;
        }

        .sidebar-toggle {
          display: flex;
        }

        .overlay {
          position: fixed;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background-color: rgba(0, 0, 0, 0.5);
          z-index: 999;
          display: none;
        }

        .overlay.active {
          display: block;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      
    </main>
    <Footer />
  </body>
</html>
