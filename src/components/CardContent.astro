---
import type { Chapter } from '../types/interfaces.astro'

interface Props {
  book: Chapter
}

const { book } = Astro.props
---

<a href={`/book/${book.fullPath}`}>
  <div class="relative max-w-sm rounded overflow-hidden shadow-lg">
    <!-- Image -->
    <img
      class="w-full h-64 object-cover"
      src="https://picsum.photos/400/500"
      alt="Card image"
      width={200}
      height={300}
    />

    <!-- Text Overlay -->
    <div class="absolute inset-0 flex flex-col justify-end p-6">
      <!-- <div class="text-white text-md font-bold mb-2">Card Title</div> -->
    </div>
  </div>
</a>
