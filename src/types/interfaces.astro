  fullPath: string
}

export interface Chapter {
  id: number
  name: string
  path: string
  fullPath: string
  subchapters: Subchapter[]
}

export interface BookCollection {
  id: string
  bookTitle: string
  coverImage: string,
  pubDate: Date
  chapters: Chapter[]
}

export interface TutorialCollection {
  id: string
  tutorialTitle: string
  coverImage: string,
  pubDate: Date
  chapters: Chapter[]
}

